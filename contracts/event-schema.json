{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mission-control/event-envelope/1.0.0",
  "title": "Mission Control Event Envelope",
  "type": "object",
  "required": [
    "id",
    "schemaVersion",
    "eventVersion",
    "source",
    "type",
    "severity",
    "timestamp",
    "correlationId",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0"
    },
    "eventVersion": {
      "type": "integer",
      "minimum": 1
    },
    "source": {
      "type": "string",
      "enum": [
        "mission-control",
        "self-healing-systems",
        "immaculate-vibes"
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "agent.spawned",
        "agent.progress",
        "agent.completed",
        "build.failed",
        "build.passed",
        "heal.attempted",
        "heal.completed",
        "heal.escalated",
        "decision.required",
        "decision.resolved"
      ]
    },
    "severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "critical"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "correlationId": {
      "type": "string",
      "minLength": 1
    },
    "agentId": {
      "type": "string"
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
